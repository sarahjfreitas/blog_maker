= form_with(model: @post, local: true) do |form|
  - if(@post.errors.any?)
    #error_explanation
      %h2= pluralize(post.errors.count, "error") + 'prohibited this post from being saved:'
      %ul
      - @post.errors.full_messages.each do |message|
        %li= message 
  %p
    = f.label :title
    = f.text_field :title
  %p
    = f.label :body
    = f.text_area :body
  %p
    = form.submit
