#post_content
  %h1.title= @post.title 
  %p.date
    = 'Submitted ' + time_ago_in_words(@post.created_at) + ' ago |'
    = link_to('Edit', edit_post_path(@post)) + ' |'
    = link_to('Back', posts_path)
  %p.body= @post.body

  #comments
    %h2= @post.comments.count.to_s + ' comments'
    = render @post.comments
    %h3 Join Discussion:
    = render 'comments/form'